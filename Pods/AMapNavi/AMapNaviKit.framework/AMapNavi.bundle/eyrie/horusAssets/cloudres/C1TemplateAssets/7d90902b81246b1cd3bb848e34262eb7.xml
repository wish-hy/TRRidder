<!--骑步行夜间出行安全气泡-->
<xml>
  <params>
    <param useCommonParser='true' direction='rightTop' anchorOffset='(15,19)'>
      <subparam
        id='backimage'
        background-image='205014'
        backgroundstretch='37% 40% 62% 43%'
        padding='18px 24px 40px 40px'
      ></subparam>
    </param>

    <param useCommonParser='true' direction='leftTop' anchorOffset='(15,19)'>
      <subparam
        id='backimage'
        background-image='205013'
        backgroundstretch='37% 43% 62% 40%'
        padding='18px 40px 40px 24px'
      ></subparam>
    </param>

    <param
      useCommonParser='true'
      direction='rightBottom'
      anchorOffset='(15,19)'
    >
      <subparam
        id='backimage'
        background-image='205016'
        backgroundstretch='42% 48% 57% 43%'
        padding='40px 24px 28px 40px'
      ></subparam>
    </param>

    <param useCommonParser='true' direction='leftBottom' anchorOffset='(15,19)'>
      <subparam
        id='backimage'
        background-image='205015'
        backgroundstretch='42% 43% 57% 48%'
        padding='40px 40px 28px 24px'
      ></subparam>
    </param>
  </params>

  <div id='backimage' style='width: auto; height: auto'>
    <div style='display: flex; flex-direction: row; align-items: center; position: relative'>
      <img
        style='width: 54px; height: 52px; margin-right: 8px; align-self: center; margin-top: -1px'
        src='231325'
        syncload='true'
        syncloadCache='false'
        fastmode='false'
      ></img>

      <label
        style='align-self: center; margin-right: 3px; font-weight: bold; font-size: 26px; color: @Color_Black; white-space: nowrap; line-height: 26px; margin-top: -3px'
        text='{text}'
      ></label>
    </div>
  </div>
</xml>
