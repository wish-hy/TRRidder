<!--夜间宽敞大路-->
<xml>
  <params>
    <param useCommonParser='true' direction='leftTop' anchorOffset='(5,15)'>
      <subparam
        id='backimage'
        background-image='110518'
        backgroundstretch='34% 41% 61% 48%'
        padding='21px 44px 45px 35px'
        backgroundtransform='rotate(0,180,0)'
      ></subparam>
    </param>

    <param useCommonParser='true' direction='leftBottom' anchorOffset='(5,5)'>
      <subparam
        id='backimage'
        background-image='110518'
        backgroundstretch='34% 41% 61% 48%'
        padding='47px 44px 23px 35px'
        backgroundtransform='rotate(180,180,0)'
      ></subparam>
    </param>

    <param useCommonParser='true' direction='rightTop' anchorOffset='(5,15)'>
      <subparam
        id='backimage'
        background-image='110518'
        backgroundstretch='34% 41% 61% 48%'
        padding='21px 32px 45px 47px'
      ></subparam>
    </param>

    <param useCommonParser='true' direction='rightBottom' anchorOffset='(5,5)'>
      <subparam
        id='backimage'
        background-image='110518'
        backgroundstretch='34% 41% 61% 48%'
        padding='47px 32px 23px 47px'
        backgroundtransform='rotate(180,0,0)'
      ></subparam>
    </param>
  </params>

  <div
    id='backimage'
    style='display: flex; width: auto; height: auto; background-color: @Color_BG_L2(00); flex-direction: row; align-items: center'
  >
    <div style='display: flex; width: auto; height: auto; flex-direction: row; align-items: center; background-color: @Color_BG_L2(00)'>
      <label
        style='color: @Color_Black; font-size: 30px; margin-top: 5px; margin-bottom: 5px; margin-right: 5px; font-weight: bold; background-color: @Color_BG_L2(00)'
        text='{text}'
      ></label>
    </div>
  </div>
</xml>
