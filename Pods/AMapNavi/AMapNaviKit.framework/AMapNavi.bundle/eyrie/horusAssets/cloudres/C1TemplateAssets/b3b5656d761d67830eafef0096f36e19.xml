<!--公交详情页公交车站名样式-->
<xml>
  <params>
    <param
      useCommonParser='true'
      direction='bottomCenter'
      anchorRatio='(0.5,0.0)'
    ></param>

    <param
      useCommonParser='true'
      direction='topCenter'
      anchorRatio='(0.5,1.0)'
    ></param>

    <param
      useCommonParser='true'
      direction='rightCenter'
      anchorRatio='(0.0,0.5)'
    ></param>

    <param
      useCommonParser='true'
      direction='leftCenter'
      anchorRatio='(1.0,0.5)'
    ></param>
  </params>

  <div style='display: flex; width: auto; height: auto; background-color: @Color_BG_L2(00); border-radius: 8px; padding: 12px; flex-direction: column; margin: 6px; align-items: center'>
    <label
      style='text-stroke: 2px @Color_BG_L2; color: @Color_Ink_L7; font-size: 24px; font-weight: bold'
      text='{label}'
    ></label>
  </div>
</xml>
