<!--顺路搜推荐气泡-->
<xml>
  <params>
    <param useCommonParser='true' direction='rightTop' anchorOffset='(38,0)'>
      <subparam id='maindiv' flex-direction='row'></subparam>

      <subparam id='firstdiv' justify-content='flex-start'></subparam>

      <subparam id='seconddiv' align-items='flex-start'></subparam>

      <subparam id='thirddiv' align-items='flex-start'></subparam>

      <subparam id='firstlab' align-self='flex-start'></subparam>

      <subparam id='secondlab' align-self='flex-start'></subparam>
    </param>

    <param useCommonParser='true' direction='leftTop' anchorOffset='(40,0)'>
      <subparam id='maindiv' flex-direction='row-reverse'></subparam>

      <subparam id='firstdiv' justify-content='center'></subparam>

      <subparam
        id='seconddiv'
        align-items='flex-end'
        justify-content='flex-end'
      ></subparam>

      <subparam id='firstlab' align-self='flex-end'></subparam>

      <subparam id='secondlab' align-self='flex-end'></subparam>
    </param>


  </params>

  <div id='maindiv' style='display: flex; align-items: flex-start'>
    <div
      id='firstdiv'
      style='display: flex; position: relative; align-items: flex-start; flex-direction: row'
    >
      <img
        style='width: 78px; height: 84px; align-self: center'
        src='{picUrl}'
        syncload='true'
        serviceresize='true'
        syncloadCache='false'
        fastmode='false'
      ></img>
    </div>

    <div
      id='thirddiv'
      style='display: flex; flex-direction: column; align-self: center'
    >
      <label
        id='firstlab'
        style='position: relative; margin-left: 2px; line-height: 37px; color: {labelColor}; font-size: 26px; font-weight: bold; border-radius: 9px'
        text='{label}'
      ></label>

      <div
        id='seconddiv'
        style='display: {subDisplay}; position: relative; flex-direction: row; margin-top: -1px; border-radius: 9px; background-color: #99ffffff; line-height: 20px'
      >
        <label
          id='secondlab'
          style='color: {subLabelColor}; font-size: 20px; font-weight: normal; margin: 1px 3px'
          text='{subLabel}'
        ></label>
      </div>
    </div>
  </div>
</xml>
