<!--步导无障碍设施气泡-->
<xml>
  <params>
    <param useCommonParser='true' direction='topCenter' anchorOffset='(0,0)'>
      <subparam
        id='backimage'
        backgroundstretch='41% 66% 58% 32% 41% 32% 58% 66%'
        padding='10px 17px 20px 20px'
      ></subparam>
    </param>
  </params>

  <div
    id='backimage'
    style='width: auto; height: auto; background-image: {bgId}'
    syncload='true'
  >
    <div style='display: flex; position: relative; align-items: center; flex-direction: row'>
      <div style='display: flex; align-items: center; flex-direction: row'>
        <label
          style='line-height: 28px; white-space: nowrap; color: #ffffff; font-size: 28px; font-weight: bold; margin-right: 5px; align-self: center'
          text='{index}'
        ></label>

        <img
          style='width: 34px; height: 34px; align-self: center'
          src='{facilitiesIcon}'
          syncload='true'
          syncloadCache='false'
          fastmode='false'
        ></img>
      </div>
    </div>
  </div>
</xml>
