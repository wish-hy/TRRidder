<!--终点名称样式-->
<xml>
  <params>
    <param
      useCommonParser='true'
      direction='bottomCenter'
      anchorRatio='(0.5,0.0)'
    >
      <subparam id='endPointName' padding='24px 0px 0px 0px'></subparam>
    </param>

    <param
      useCommonParser='true'
      direction='rightCenter'
      anchorRatio='(0.0,0.5)'
    >
      <subparam id='endPointName' padding='0px 0px 0px 32px'></subparam>
    </param>

    <param
      useCommonParser='true'
      direction='leftCenter'
      anchorRatio='(1.0,0.5)'
    >
      <subparam id='endPointName' padding='0px 32px 0px 0px'></subparam>
    </param>

    <param useCommonParser='true' direction='rightTop' anchorRatio='(0.0,1.0)'>
      <subparam id='endPointName' padding='0px 0px 0px 32px'></subparam>
    </param>

    <param useCommonParser='true' direction='leftTop' anchorRatio='(1.0,1.0)'>
      <subparam id='endPointName' padding='0px 32px 0px 0px'></subparam>
    </param>
  </params>

  <div
    id='endPointName'
    style='display: flex; width: auto; height: 54px; justify-content: center; align-items: center; margin: 6px; flex-direction: column; border-radius: 8px; background-color: @Color_BG_L2(00)'
  >
    <label
      style='line-clamp: 2; text-stroke: 2px {strokeColor}; max-width: 166px; font-weight: bold; opacity: 0.87; font-size: {fontSize}; color: {color}'
      text='{label}'
    ></label>
  </div>
</xml>
