<!--公交详情页普通公交站牌-->
<xml>
  <params>
    <param
      useCommonParser='true'
      direction='rightBottom'
      anchorOffset='(43,84)'
    >
      <subparam id='maindiv' flex-direction='row'></subparam>

      <subparam id='image' align-self='flex-start'></subparam>

      <subparam id='firstdiv' align-self='flex-start'></subparam>

      <subparam id='firstlab' align-self='flex-start'></subparam>

      <subparam id='secondlab' align-self='flex-start'></subparam>

      <subparam id='thirddiv' align-items='flex-start'></subparam>

      <subparam id='forthdiv' justify-content='flex-start'></subparam>
    </param>

    <param useCommonParser='true' direction='leftBottom' anchorOffset='(43,84)'>
      <subparam id='maindiv' flex-direction='row-reverse'></subparam>

      <subparam id='image' align-self='flex-end'></subparam>

      <subparam id='firstdiv' align-self='flex-end'></subparam>

      <subparam id='firstlab' align-self='flex-end'></subparam>

      <subparam id='secondlab' align-self='flex-end'></subparam>

      <subparam id='thirddiv' align-items='flex-end'></subparam>

      <subparam
        id='forthdiv'
        justify-content='center'
        align-items='flex-start'
        position='relative'
      ></subparam>
    </param>
  </params>

  <div id='maindiv' style='display: flex; align-items: flex-start'>
    <div id='forthdiv' style='display: flex; flex-direction: row'>
      <img
        id='image'
        style='width: 86px; height: 74px'
        src='{iconId}'
        syncload='true'
      ></img>
    </div>

    <div
      id='thirddiv'
      style='display: flex; line-height: 30px; margin-top: 10px; flex-direction: column'
    >
      <div
        id='firstdiv'
        style='display: flex; background-color: #00BD80; border-radius: 8px; flex-direction: row; position: relative'
      >
        <label
          id='firstlab'
          style='padding-left: 6px; padding-right: 6px; margin: 1px 6px; font-size: 26px; color: @Color_Text_Highlight'
          text='{label}'
        ></label>
      </div>

      <label
        id='secondlab'
        style='line-clamp: 2; font-size: 26px; color: @Color_Black; margin-top: 6px; position: relative; text-layout-amap: Y; text-align: left; font-weight: bold'
        text='{subLabel}'
      ></label>
    </div>
  </div>
</xml>
